---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact | Artist Name">
  <section class="min-h-screen pt-32 pb-24 px-8 md:px-16 lg:px-24">
    <div class="max-w-6xl mx-auto">
      <div class="mb-16 md:mb-24">
        <div class="overflow-hidden"><p class="page-line text-accent text-sm tracking-[0.3em] uppercase mb-4 translate-y-full">Contact</p></div>
        <div class="overflow-hidden"><h1 class="page-line font-serif text-5xl md:text-7xl lg:text-8xl font-light translate-y-full">Let's Connect</h1></div>
        <div class="overflow-hidden mt-6"><p class="page-line text-text-muted max-w-2xl translate-y-full">Have a project in mind or interested in a commission? I'd love to hear from you.</p></div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24">
        <div class="contact-form opacity-0 translate-y-8">
          <h2 class="font-serif text-2xl font-light mb-8">Send a Message</h2>
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-sm text-text-muted mb-2">Full Name</label>
              <input type="text" id="name" class="w-full bg-transparent border-b border-text-muted/30 py-3 text-text focus:border-accent focus:outline-none transition-colors" placeholder="Your name" />
            </div>
            <div>
              <label for="email" class="block text-sm text-text-muted mb-2">Email</label>
              <input type="email" id="email" class="w-full bg-transparent border-b border-text-muted/30 py-3 text-text focus:border-accent focus:outline-none transition-colors" placeholder="your@email.com" />
            </div>
            <div>
              <label for="message" class="block text-sm text-text-muted mb-2">Message</label>
              <textarea id="message" rows="5" class="w-full bg-transparent border-b border-text-muted/30 py-3 text-text focus:border-accent focus:outline-none transition-colors resize-none" placeholder="Your message..."></textarea>
            </div>
            <button type="submit" class="magnetic inline-flex items-center gap-3 border-2 border-text px-8 py-4 hover:bg-text hover:text-bg transition-all duration-500">
              <span class="text-sm tracking-[0.2em] uppercase">Send</span>
              <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M5 12h14M12 5l7 7-7 7" /></svg>
            </button>
          </form>
        </div>

        <div class="contact-info opacity-0 translate-y-8 space-y-12">
          <div>
            <h3 class="text-accent text-xs tracking-[0.2em] uppercase mb-4">Email</h3>
            <a href="mailto:hello@example.com" class="font-serif text-2xl md:text-3xl font-light hover:text-accent transition-colors">hello@example.com</a>
          </div>
          <div>
            <h3 class="text-accent text-xs tracking-[0.2em] uppercase mb-4">Location</h3>
            <p class="font-serif text-2xl md:text-3xl font-light">New York, USA</p>
            <p class="text-text-muted mt-2">Available for international projects</p>
          </div>
          <div>
            <h3 class="text-accent text-xs tracking-[0.2em] uppercase mb-4">Social Media</h3>
            <div class="flex gap-6">
              <a href="#" class="magnetic flex items-center gap-3 text-text hover:text-accent transition-colors group">
                <div class="w-12 h-12 rounded-full border border-text-muted/30 flex items-center justify-center group-hover:border-accent transition-colors">
                  <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="2" width="20" height="20" rx="5" /><circle cx="12" cy="12" r="4" /><circle cx="18" cy="6" r="1" fill="currentColor" /></svg>
                </div>
                <span class="text-sm">Instagram</span>
              </a>
              <a href="#" class="magnetic flex items-center gap-3 text-text hover:text-accent transition-colors group">
                <div class="w-12 h-12 rounded-full border border-text-muted/30 flex items-center justify-center group-hover:border-accent transition-colors">
                  <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" /></svg>
                </div>
                <span class="text-sm">Facebook</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  import gsap from "gsap";
  document.addEventListener("preloaderComplete", init);
  if (!document.getElementById("preloader") || document.getElementById("preloader")?.style.display === "none") init();
  function init() {
    gsap.to(".page-line", { y: 0, duration: 1, stagger: 0.1, ease: "power3.out" });
    gsap.to(".contact-form", { opacity: 1, y: 0, duration: 0.8, ease: "power3.out", delay: 0.4 });
    gsap.to(".contact-info", { opacity: 1, y: 0, duration: 0.8, ease: "power3.out", delay: 0.5 });
  }
</script>
