---
// Contact CTA section with large text
---

<section id="contact" class="relative py-32 md:py-48 px-8 md:px-16 lg:px-24 overflow-hidden">
  <div class="max-w-6xl mx-auto text-center">
    <div class="overflow-hidden mb-6">
      <p class="contact-line text-accent text-sm tracking-[0.3em] uppercase translate-y-full">Let's Connect</p>
    </div>

    <div class="overflow-hidden mb-12">
      <h2 class="contact-line font-serif text-5xl md:text-7xl lg:text-9xl font-light leading-tight translate-y-full">
        Have a project?<br /><span class="text-accent">Let's create together.</span>
      </h2>
    </div>

    <div class="overflow-hidden">
      <a href="/contact" class="contact-line magnetic inline-flex items-center gap-4 text-text border-2 border-text px-10 py-5 hover:bg-text hover:text-bg transition-all duration-500 translate-y-full" data-cursor="Write">
        <span class="text-base tracking-[0.2em] uppercase">Get in Touch</span>
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M5 12h14M12 5l7 7-7 7" /></svg>
      </a>
    </div>
  </div>

  <div class="absolute top-1/4 left-8 w-2 h-2 bg-accent rounded-full contact-float"></div>
  <div class="absolute bottom-1/3 right-12 w-3 h-3 border border-accent rounded-full contact-float"></div>
  <div class="absolute top-1/2 right-1/4 w-1 h-1 bg-text-muted rounded-full contact-float"></div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  gsap.to(".contact-line", { y: 0, duration: 1, stagger: 0.15, ease: "power3.out", scrollTrigger: { trigger: "#contact", start: "top 70%", toggleActions: "play none none reverse" } });

  gsap.utils.toArray<HTMLElement>(".contact-float").forEach((el, i) => {
    gsap.to(el, { y: "random(-20, 20)", x: "random(-10, 10)", duration: "random(3, 5)", repeat: -1, yoyo: true, ease: "sine.inOut", delay: i * 0.5 });
  });
</script>
